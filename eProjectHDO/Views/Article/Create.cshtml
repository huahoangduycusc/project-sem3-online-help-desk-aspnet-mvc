
@{
    ViewBag.Title = "Create article";
    Layout = "~/Views/Shared/_admin.cshtml";
}
<div class="panel-title"><h3>Create Article</h3></div>
<div class="row">
    <div class="col-12">
        @using (Html.BeginForm("Create", "Article", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            if (ViewBag.Msg != null)
            {
                <div class="error">@ViewBag.Msg</div>
            }
            if (ViewBag.Success != null)
            {
                <div class="success">@Html.Raw(ViewBag.Success)</div>
            }
            <div class="box-input">
                <p>Title : </p>
                <input type="text" name="title" class="form-control" required>
            </div>
            <div class="box-input">
                <p>Description : </p>
                <textarea name="description" class="form-control" rows="5" required></textarea>
            </div>
            <div class="box-input">
                <p>Thumbnail : </p>
                <input type="file" name="thumbnail" class="form-control" required>
            </div>
            <div class="box-input">
                <p>Category : </p>
                @Html.DropDownList("categoryId", new SelectList((System.Collections.IEnumerable)TempData["category"], "CategoryId", "CategoryName"), new { @class = "form-control" })
            </div>
            <!-- end input -->
            <div class="box-input">
                <div class="center">
                    <button type="submit" class="btn btn-create">Create</button>
                </div>
            </div>
        }
    </div>
    <a href="@Url.Action("List")" class="back">Back to List</a>
    <!-- end col 12 -->
</div>
<!-- end row -->
<script src="~/Scripts/ckeditor/ckeditor.js"></script>
<script src="~/Scripts/ckfinder/ckfinder.js"></script>
<script>
    CKEDITOR.replace('description');
</script>