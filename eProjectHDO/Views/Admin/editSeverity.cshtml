@model eProjectHDO.Models.Severity
@{
    ViewBag.Title = "Edit Severity";
    Layout = "~/Views/Shared/_admin.cshtml";
}

<div class="panel-title"><h3>Edit Severity</h3></div>
<div class="row">
    <div class="col-12">
        @using (Html.BeginForm())
        {
            if (ViewBag.Msg != null)
            {
                <div class="error">@ViewBag.Msg</div>
            }
            if (ViewBag.Success != null)
            {
                <div class="success">@ViewBag.Success</div>
            }
            <div class="box-input">
                <p>Severity Name : </p>
                @Html.TextBoxFor(m => m.SeverityName, "", new {@class="form-control",required="required" })
            </div>
            <!-- end input -->
            <div class="box-input">
                <p>Description : </p>
                @Html.TextAreaFor(m => m.Description, 5, 5, new {@class="form-control",required="required" })
            </div>
            <!-- end input -->
            <div class="box-input">
                <div class="center">
                    <button type="submit" class="btn btn-create">Update</button>
                </div>
            </div>
        }
    </div>
    <a href="@Url.Action("cSeverity")" class="back">Back to List</a>
    <!-- end col 12 -->
</div>
<!-- end row -->
