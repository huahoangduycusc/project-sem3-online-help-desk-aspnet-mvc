@{
    ViewBag.Title = "Control Panel";
    Layout = "~/Views/Shared/_admin.cshtml";
}
<div class="row">
    <div class="coso">
        Type of facility : @TempData["facility"]
    </div>
</div>
<div class="row">
    <div class="col-3 col-m-6 col-sm-6">
        <div class="counter bg-primary">
            <p><i class="fas fa-tasks"></i></p>
            <h3>@TempData["toDo"]+</h3>
            <p>To do</p>
        </div>
    </div>
    <div class="col-3 col-m-6 col-sm-6">
        <div class="counter bg-warning">
            <p><i class="fas fa-spinner"></i></p>
            <h3>@TempData["inProcess"]+</h3>
            <p>In proccess</p>
        </div>
    </div>
    <div class="col-3 col-m-6 col-sm-6">
        <div class="counter bg-success">
            <p><i class="fas fa-check-circle"></i></p>
            <h3>@TempData["completed"]+</h3>
            <p>Completed</p>
        </div>
    </div>
    <div class="col-3 col-m-6 col-sm-6">
        <div class="counter bg-danger">
            <p><i class="fas fa-bug"></i></p>
            <h3>@TempData["issues"]+</h3>
            <p>Issue</p>
        </div>
    </div>
</div>
<!-- end row -->
<div class="row">
    <div class="col-12 col-m-12 col-sm-12">
        <div class="card">
            <div class="card-header">
                <h3>
                    Statistic
                </h3>
            </div>
            <div class="card-content">
                <canvas id="myChart"></canvas>
            </div>
        </div>
    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.js"></script>
<script>
    var pending = @Html.Raw(Json.Encode(ViewBag.pending));
    var success = @Html.Raw(Json.Encode(ViewBag.success));
    var date = @Html.Raw(Json.Encode(ViewBag.date));
    var ctx = document.getElementById('myChart')
ctx.height = 500
ctx.width = 500
var data = {
	labels: date,
	datasets: [{
		fill: false,
		label: 'Request',
		borderColor: "#4834d4",
		data: pending,
		borderWidth: 2,
		lineTension: 0,
	}, {
		fill: false,
		label: 'Resolved',
		borderColor: "#6ab04c",
		data: success,
		borderWidth: 2,
		lineTension: 0,
	}]
}

var lineChart = new Chart(ctx, {
	type: 'line',
	data: data,
	options: {
		maintainAspectRatio: false,
		bezierCurve: false,
	}
})
</script>