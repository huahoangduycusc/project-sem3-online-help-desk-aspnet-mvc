
@{
    ViewBag.Title = "Create new Severity";
    Layout = "~/Views/Shared/_admin.cshtml";
}
<div class="panel-title"><h3>Create Severity</h3></div>
<div class="row">
    <div class="col-12">
        @using (Html.BeginForm())
        {
            if (ViewBag.Msg != null)
            {
                <div class="error">@ViewBag.Msg</div>
            }
            if (ViewBag.Success != null)
            {
                <div class="success">@ViewBag.Success</div>
            }
            <div class="box-input">
                <p>Severity Name : </p>
                <input type="text" name="SeverityName" class="form-control" required>
            </div>
            <!-- end input -->
            <div class="box-input">
                <p>Description : </p>
                <textarea name="Description" class="form-control" rows="5" required></textarea>
            </div>
            <!-- end input -->
            <div class="box-input">
                <div class="center">
                    <button type="submit" class="btn btn-create">Create</button>
                </div>
            </div>
        }
    </div>
    <a href="@Url.Action("cSeverity")" class="back">Back to List</a>
    <!-- end col 12 -->
</div>
<!-- end row -->
