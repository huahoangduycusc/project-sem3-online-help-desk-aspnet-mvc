
@{
    ViewBag.Title = "Index";
}

@if (Session.Count > 0 && Session["username"].ToString() != "")
{
    <div class="box-welcome">
        <div class="welcome-avatar">
            <a href="@Url.Action("Index","User",new {id=Session["uid"] })" class="avatar-obj">
                <img src="/images/profile/@Session["avatar"]" alt="">
                <p>@Session["username"]</p>
            </a>
        </div>
        <div class="welcome-request">
            <a href="@Url.Action("Create","Request")" class="btn-request">
                <i class="fas fa-retweet"></i> Create request
            </a>
        </div>
    </div>
}
