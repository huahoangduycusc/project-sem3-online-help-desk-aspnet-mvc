@{
    ViewBag.Title = "Create Question and Answer";
    Layout = "~/Views/Shared/_admin.cshtml";
}
<div class="panel-title"><h3>Create Question and Answer</h3></div>
<div class="row">
    <div class="col-12">
        @using (Html.BeginForm())
        {
            if (ViewBag.Msg != null)
            {
                <div class="error">@ViewBag.Msg</div>
            }
            if (ViewBag.Success != null)
            {
                <div class="success">@ViewBag.Success</div>
            }
            <div class="box-input">
                <p>Question : </p>
                <input type="text" name="question" class="form-control" required>
            </div>
            <!-- end input -->
            <div class="box-input">
                <p>Answer : </p>
                <textarea rows="5" name="answer" class="form-control" required></textarea>
            </div>
            <!-- end input -->
            <div class="box-input">
                <div class="center">
                    <button type="submit" class="btn btn-create">Create</button>
                </div>
            </div>
        }
    </div>
    <a href="@Url.Action("cQandA")" class="back">Back to List</a>
    <!-- end col 12 -->
</div>
<!-- end row -->
