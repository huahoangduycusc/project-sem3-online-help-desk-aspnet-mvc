
@{
    ViewBag.Title = "createUser";
    Layout = "~/Views/Shared/_admin.cshtml";
}
<div class="panel-title"><h3>Create Category</h3></div>
<div class="row">
    <div class="col-7">
        @using (Html.BeginForm())
        {
            if (ViewBag.Msg != null)
            {
                <div class="error">@ViewBag.Msg</div>
            }
            if (ViewBag.Success != null)
            {
                <div class="success">@ViewBag.Success</div>
            }
            <div class="box-input">
                <p>Username : </p>
                <input type="text" name="username" class="form-control" value="Account" placeholder="Must be from 5 to 15 characters" required>
            </div>
            <div class="box-input">
                <p>Password : </p>
                <input type="password" name="password" class="form-control" required>
            </div>
            <div class="box-input">
                <p>Fullname : </p>
                <input type="text" name="fullname" class="form-control" required>
            </div>
            <div class="box-input">
                <p>Email : </p>
                <input type="email" name="email" class="form-control" required>
            </div>
            <div class="box-input">
                <p>Gender : </p>
                <select class="form-control" name="gender">
                    <option value="false">Male</option>
                    <option value="true">Female</option>
                </select>
            </div>
            <div class="box-input">
                <p>Role : </p>
                @Html.DropDownList("role", new SelectList((System.Collections.IEnumerable)TempData["role"], "RoleId", "RoleName"), new { @class = "form-control" })
            </div>
            <div class="box-input">
                <p>Facility : </p>
                @Html.DropDownList("facility", new SelectList((System.Collections.IEnumerable)TempData["coso"], "FacilityId", "FacilityName"), new { @class = "form-control" })
            </div>
            <!-- end input -->
            <div class="box-input">
                <div class="center">
                    <button type="submit" class="btn btn-create">Create</button>
                </div>
            </div>
        }
    </div>
    <a href="@Url.Action("cAccount")" class="back">Back to List</a>
    <!-- end col 12 -->
</div>
<!-- end row -->
